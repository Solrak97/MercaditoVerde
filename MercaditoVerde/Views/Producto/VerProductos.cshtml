@{
	ViewBag.Title = "VerProductos";
}

<h2>VerProductos</h2>

@{
	<div class="grid">
		@foreach (MercaditoVerde.Models.ProductoModel producto in ViewBag.productos)
		{
			string imageUrl = "data:image;base64," + Convert.ToBase64String(producto.contenidoImagen);

				<div class="TarjetaProducto">
					<img src=@imageUrl  />
					<h4>@producto.nombre</h4>
					<h4>@producto.tipoUnidad</h4>
					<h4>₡@producto.precio</h4>
					<!-- Meter botoncito de carrito-->
				</div>
		}
	</div>
}

<style>
	.grid {
		display: grid;
		grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
		grid-gap: 1rem;
	}

	.grid > div {
		background: #EDE7F6;
		padding: 1.5rem;
		border-radius: 1rem;
	}

		.grid > div > img {
			width: 100%;
			max-width: 100%;
			height: 50%;
			max-height: 50%;
		}

</style>